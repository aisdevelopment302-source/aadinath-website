{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/app/$1"
    },
    "paths": {
      "@/*": ["./app/*"]
    },
    "baseUrl": "."
  },
  "include": ["app", "public"],
  "exclude": ["node_modules"]
}
